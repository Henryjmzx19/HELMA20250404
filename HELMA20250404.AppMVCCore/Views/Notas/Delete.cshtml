@model HELMA20250404.AppMVCCore.Models.Nota

@{
    ViewData["Title"] = "Eliminar";
}

<style>
    body {
        background-color: gainsboro;
    }

    h1 {
        color: blue;
    }
</style>

<h1>Eliminar</h1>

<h3>¿Estás seguro que quieres eliminar esta nota?</h3>

<div>
    <h4>Nota</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Trimestre1)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Trimestre1)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Trimestre2)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Trimestre2)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Trimestre3)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Trimestre3)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Promedio)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Promedio)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Estado)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdAulaNavigation)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IdAulaNavigation.Nombre)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdMateriaNavigation)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IdMateriaNavigation.Nombre)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdMatriculaNavigation)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IdMatriculaNavigation.IdMatricula)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Cancelar</a>
    </form>
</div>
