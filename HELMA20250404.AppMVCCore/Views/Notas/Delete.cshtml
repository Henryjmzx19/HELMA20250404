@model HELMA20250404.AppMVCCore.Models.Nota

@{
    ViewData["Title"] = "Eliminar nota";
}

<style>
    body {
        background-color: gainsboro;
    }

    h1 {
        color: blue;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-white">
                    <h1 class="mb-0">Eliminar nota</h1>
                    <p class="text-muted">Por favor, confirma si deseas eliminar esta nota</p>
                </div>

                 <div class="card-body">
                    <form asp-action="Delete">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="alert alert-warning text-center" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <h3>¿Estás seguro que quieres eliminar esta nota?</h3>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">ID Matrícula</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Matricula.Alumno.Usuario.NombreUsuario)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Materia</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Materia.Nombre)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Aula</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Aula.Nombre)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Trimestre 1</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Trimestre1)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Trimestre 2</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Trimestre2)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Trimestre 3</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Trimestre3)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Promedio</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Promedio)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Estado</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Estado)" readonly />
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-info">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
