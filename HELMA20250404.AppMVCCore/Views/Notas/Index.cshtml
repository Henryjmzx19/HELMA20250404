@model IEnumerable<HELMA20250404.AppMVCCore.Models.Nota>

@{
    ViewData["Title"] = "Notas";
}

<style>
    body {
        background-color: gainsboro;
    }

    h1 {
        color: blue;
    }
</style>

<h1>Notas</h1>

<p>
    <div class="row">
        <div class="form-group">
            <a asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Agregar nueva nota
            </a>
        </div>
    </div>
</p>

<table class="table table-striped table-bordered">
  
        <tr>
            <th>@Html.DisplayNameFor(model => model.Trimestre1)</th>
            <th>@Html.DisplayNameFor(model => model.Trimestre2)</th>
            <th>@Html.DisplayNameFor(model => model.Trimestre3)</th>
            <th>@Html.DisplayNameFor(model => model.Promedio)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.IdAulaNavigation)</th>
            <th>@Html.DisplayNameFor(model => model.IdMateriaNavigation)</th>
            <th>@Html.DisplayNameFor(model => model.IdMatriculaNavigation)</th>
            <th>Acciones</th>
        </tr>
 
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Trimestre1)</td>
                <td>@Html.DisplayFor(modelItem => item.Trimestre2)</td>
                <td>@Html.DisplayFor(modelItem => item.Trimestre3)</td>
                <td>@Html.DisplayFor(modelItem => item.Promedio)</td>
                <td>
                    <span class="badge @(item.Estado == "Aprobado" ? "bg-success" : "bg-danger")">
                        @Html.DisplayFor(modelItem => item.Estado)
                    </span>
                </td>
                <td>@Html.DisplayFor(modelItem => item.IdAulaNavigation.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.IdMateriaNavigation.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.IdMatriculaNavigation.IdMatricula)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
