@model IEnumerable<HELMA20250404.AppMVCCore.Models.Profesore>

@{
    ViewData["Title"] = "Lista de Profesores";
    var modelBuscar = new Profesore();
}

<style>
    body {
        background-color: gainsboro;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: blue;
        font-size: 2.5rem;
        font-weight: bold;
        display: flex;
        align-items: center;
    }

    .container-custom {
        max-width: 1200px;
        margin: 0 auto;
    }

    .table-responsive {
        margin-top: 20px;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .card {
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
        padding: 25px;
        background-color: #fff;
    }

    .btn-group .btn {
        border-radius: 8px;
        padding: 8px 12px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

<div class="container-custom">
    <h1 class="mb-4"><i class="bi bi-people"></i> Lista de Profesores</h1>

    <div class="card">
        <form asp-action="Index" class="mb-4">
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="@modelBuscar.Apellido" class="control-label"></label>
                    <input name="Apellido" class="form-control" placeholder="Apellido del profesor" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="@modelBuscar.Dui" class="control-label"></label>
                    <input name="Dui" class="form-control" placeholder="DUI" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="@modelBuscar.Telefono" class="control-label"></label>
                    <input name="Telefono" class="form-control" placeholder="Teléfono" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="form-group col-md-3">
                    <label>Cant. Reg</label>
                    <select name="topRegistro" class="form-control">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                        <option value="0">Todos</option>
                    </select>
                </div>
                <div class="form-group col-md-9 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Buscar</button>
                    <a asp-action="Create" class="btn btn-dark"><i class="bi bi-plus-circle"></i> Nuevo Profesor</a>
                </div>
            </div>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table" id="professorsTable">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th>@Html.DisplayNameFor(model => model.Dui)</th>
                    <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
                    <th>@Html.DisplayNameFor(model => model.IdUsuarioNavigation)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Dui)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Id)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">
                                    <i class="bi bi-eye"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash-fill"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#professorsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                }
            });
        });
    </script>
}

