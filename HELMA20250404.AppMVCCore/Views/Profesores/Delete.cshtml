@model HELMA20250404.AppMVCCore.Models.Profesore

@{
    ViewData["Title"] = "Eliminar profesor";
}

<style>
    body {
        background-color: gainsboro;
    }

    h1 {
        color: blue;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-white">
                    <h1 class="mb-0">Eliminar profesor</h1>
                    <p class="text-muted">Por favor, confirma si deseas eliminar este profesor</p>
                </div>

              <div class="card-body">
                    <form asp-action="Delete">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="alert alert-warning text-center" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <h3>¿Estás seguro que quieres eliminar este profesor?</h3>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Usuario</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Usuario.NombreUsuario)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Apellido</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Apellido)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Teléfono</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Telefono)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">DUI</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Dui)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Dirección</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Direccion)" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Fecha de nacimiento</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.FechaNacimiento)" readonly />
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-info">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}