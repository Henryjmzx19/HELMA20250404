@model HELMA20250404.AppMVCCore.Models.Usuario

@{
	ViewData["Title"] = "Eliminar usuario";
}

<style>
	body {
		background-color: gainsboro;
	}

	h1 {
		color: blue;
	}
</style>

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card shadow-lg">
				<div class="card-header bg-white">
					<h1 class="mb-0">Eliminar usuario</h1>
					<p class="text-muted">Por favor, confirma si deseas eliminar este usuario</p>
				</div>

				<div class="card-body">
					<form asp-action="Delete">
						<input type="hidden" asp-for="Id" />

						<div class="alert alert-warning text-center" role="alert">
							<i class="fas fa-exclamation-triangle"></i>
							<h3>¿Estás seguro que quieres eliminar este usuario?</h3>
						</div>

						<div class="form-group mb-3">
							<label class="form-label">Nombre de Usuario</label>
							<input type="text" class="form-control" value="@Model.NombreUsuario" readonly />
						</div>

						<div class="form-group mb-3">
							<label class="form-label">Email</label>
							<input type="text" class="form-control" value="@Model.Email" readonly />
						</div>

						<div class="form-group mb-3">
							<label class="form-label">Password</label>
							<input type="text" class="form-control" value="@Model.Password" readonly />
						</div>

						<div class="form-group mb-3">
							<label class="form-label">Rol</label>
							<input type="text" class="form-control" value="@Model.Rol" readonly />
						</div>

						<div class="d-flex justify-content-end gap-2">
							<input type="submit" value="Eliminar" class="btn btn-danger" />
							<a asp-action="Index" class="btn btn-info">Cancelar</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
