@model HELMA20250404.AppMVCCore.Models.Usuario

@{
	ViewData["Title"] = "Eliminar usuario";
}

<style>
	body {
		background-color: gainsboro;
	}

	h1 {
		color: blue;
	}
</style>

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card shadow-lg">
				<div class="card-header bg-white">
					<h1 class="mb-0">Eliminar usuario</h1>
					<p class="text-muted">Por favor, confirma si deseas eliminar este usuario</p>
				</div>

				<div class="card-body">
					<form asp-action="Delete">
						<input type="hidden" asp-for="Id" />

	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.NombreUsuario)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NombreUsuario)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Rol)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Rol)
		</dd>
	</dl>

						<div class="d-flex justify-content-end gap-2">
							<input type="submit" value="Eliminar" class="btn btn-danger" />
							<a asp-action="Index" class="btn btn-info">Cancelar</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
