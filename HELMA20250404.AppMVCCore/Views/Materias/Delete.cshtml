@model HELMA20250404.AppMVCCore.Models.Materia

@{
    ViewData["Title"] = "Eliminar materia";
}

<style>
    body {
        background-color: gainsboro;
    }

    h1 {
        color: blue;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-white">
                    <h1 class="mb-0">Eliminar materia</h1>
                    <p class="text-muted">Por favor, confirma si deseas eliminar esta materia</p>
                </div>

                <div class="card-body">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="alert alert-warning text-center" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <h3>¿Estás seguro que quieres eliminar esta materia?</h3>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Nombre de materia</label>
                            <input type="text" class="form-control" value="@Model.Nombre" readonly />
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-info">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
