@model HELMA20250404.AppMVCCore.Models.Materia

@{
    ViewData["Title"] = "Crear materia";
}

<style>
    body {
        background-color: gainsboro;
    }

    h1 {
        color: blue;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-white">
                    <h1 class="mb-0">Crear materia</h1>
                    <p class="text-muted">Por favor ingrese la información en cada campo correspondiente</p>
                </div>

                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre de la materia</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-info">Cancelar</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
