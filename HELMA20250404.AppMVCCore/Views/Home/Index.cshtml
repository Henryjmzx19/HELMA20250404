@{
    ViewData["Title"] = "Home Page";
}
<br />
<div class="text-center">
    <h4 class="display-4 text-primary" id="welcomeText">¡Bienvenido!</h4>
    <p class="lead" id="descriptionText">
        Nuestra aplicación web es un sistema de calificaciones para una escuela de educación básica que utiliza diferentes funcionalidades
    </p>

    <!-- Funcionalidades CRUD -->
    <div class="mt-5">
        <h4></h4>
        <div class="row justify-content-center mt-3">
            <!-- Crear -->
            <div class="col-12 col-md-3 text-center mb-4">
                <i class="bi bi-plus-circle-fill fs-1 text-success icon-hover"></i>
                <p class="mt-2 text-hover">Crear</p>
                <!-- Icono debajo de Crear -->
                <i class="bi bi-pencil-fill fs-2 text-success icon-hover"></i> <!-- Icono para la acción Crear -->
            </div>

            <!-- Visualizar -->
            <div class="col-12 col-md-3 text-center mb-4">
                <i class="bi bi-eye-fill fs-1 text-info icon-hover"></i>
                <p class="mt-2 text-hover">Visualizar</p>
                <!-- Icono debajo de Visualizar -->
                <i class="bi bi-search fs-2 text-info icon-hover"></i> <!-- Icono para la acción Visualizar -->
            </div>

            <!-- Actualizar -->
            <div class="col-12 col-md-3 text-center mb-4">
                <i class="bi bi-pencil-square fs-1 text-warning icon-hover"></i>
                <p class="mt-2 text-hover">Actualizar</p>
                <!-- Icono debajo de Actualizar -->
                <i class="bi bi-arrow-repeat fs-2 text-warning icon-hover"></i> <!-- Icono para la acción Actualizar -->
            </div>

            <!-- Eliminar -->
            <div class="col-12 col-md-3 text-center mb-4">
                <i class="bi bi-trash-fill fs-1 text-danger icon-hover"></i>
                <p class="mt-2 text-hover">Eliminar</p>
                <!-- Icono debajo de Eliminar -->
                <i class="bi bi-dash-circle-fill fs-2 text-danger icon-hover"></i> <!-- Icono para la acción Eliminar -->
            </div>
        </div>
    </div>
</div>

<!-- Agregar Bootstrap Icons -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>

<style>
    /* Letra llamativa y profesional */
    #welcomeText {
        font-family: 'Arial', sans-serif;
        font-weight: bold;
        color: #1D4ED8; /* Color llamativo */
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2); /* Sombra sutil */
        transition: transform 0.3s ease, color 0.3s ease;
        font-size: 2.00rem; /* Tamaño de fuente más grande */
    }

    #descriptionText {
        font-family: 'Verdana', sans-serif;
        font-size: 1.10rem;
        color: #4B5563;
        margin-top: 15px;
        transition: transform 0.3s ease, color 0.3s ease;
    }

    /* Efecto dinámico con hover */
    #welcomeText:hover {
        transform: scale(1.1);
        color: #F59E0B; /* Color cuando pasa el ratón */
    }

    #descriptionText:hover {
        transform: scale(1.05);
        color: #D1D5DB; /* Color cuando pasa el ratón */
    }

    /* Efectos de animación en los iconos */
    .icon-hover {
        transition: transform 0.3s ease;
    }

        .icon-hover:hover {
            transform: scale(1.2) rotate(360deg); /* Aumenta el tamaño y gira el icono */
        }

    /* Estilo para los textos debajo de los íconos */
    p {
        font-weight: bold;
        color: #4B5563;
        transition: transform 0.3s ease, color 0.3s ease;
    }

        p:hover {
            color: #1D4ED8; /* Cambio de color al pasar el ratón */
            transform: scale(1.1); /* Aumenta el tamaño del texto */
        }

    /* Estilo para los iconos con hover */
    .icon-hover:hover {
        transform: scale(1.2) rotate(360deg); /* Aumenta el tamaño y rota el icono */
    }

    /* Asegurarse de que los iconos pequeños debajo no sean tan grandes */
    .text-hover:hover {
        transform: scale(1.1); /* Hace crecer el texto debajo del icono */
        color: #1D4ED8; /* Cambia color del texto al pasar el ratón */
    }
</style>
