@model HELMA20250404.AppMVCCore.Models.Usuario

@{
    ViewData["Title"] = "Crear alumno";
}

<style>
    body {
        background-color: gainsboro;
    }

    h1 {
        color: blue;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-white">
                    <h1 class="mb-0">Crear alumno</h1>
                    <p class="text-muted">Por favor ingrese la información en cada campo correspondiente</p>
                </div>

                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Rol" type="hidden" value="ALUMNO" />

                        <div class="form-group mb-3">
                            <label asp-for="Alumno.Apellido" class="form-label">Apellido</label>
                            <input asp-for="Alumno.Apellido" class="form-control" />
                            <span asp-validation-for="Alumno.Apellido" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Alumno.Nie" class="form-label">Nie</label>
                            <input asp-for="Alumno.Nie" class="form-control" />
                            <span asp-validation-for="Alumno.Nie" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Alumno.Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Alumno.Telefono" class="form-control" />
                            <span asp-validation-for="Alumno.Telefono" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Alumno.Encargado" class="form-label">Encargado</label>
                            <input asp-for="Alumno.Encargado" class="form-control" />
                            <span asp-validation-for="Alumno.Encargado" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Alumno.YearNacimiento" class="form-label">Año de nacimiento</label>
                            <input asp-for="Alumno.YearNacimiento" type="date" class="form-control" />
                            <span asp-validation-for="Alumno.YearNacimiento" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Alumno.Direccion" class="form-label">Dirección</label>
                            <textarea asp-for="Alumno.Direccion" class="form-control"></textarea>
                            <span asp-validation-for="Alumno.Direccion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NombreUsuario" class="form-label">Nombre de usuario</label>
                            <input asp-for="NombreUsuario" class="form-control" />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Correo electrónico</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="file" class="form-label">Imagen</label>
                            <input type="file" id="imageFile" name="file" class="form-control" accept="image/*" />
                            <div id="preview" style="display: none;">
                                <img id="imagePreview" src="#" alt="Vista previa de la imagen" style="max-width: 200px; max-height: 200px;">
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-info">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('imageFile').addEventListener('change', function (event) {
        const file = event.target.files[0];
        const preview = document.getElementById('preview');
        const imagePreview = document.getElementById('imagePreview');

        if (file) {
            const fileReader = new FileReader();

            fileReader.onload = function (e) {
                imagePreview.src = e.target.result;
                preview.style.display = 'block';
            };

            fileReader.readAsDataURL(file);
        } else {
            imagePreview.src = '#';
            preview.style.display = 'none';
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
