@model HELMA20250404.AppMVCCore.Models.Matricula

@{
    ViewData["Title"] = "Eliminar matrícula";
}

<style>
    body {
        background-color: gainsboro;
    }

    h1 {
        color: blue;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-white">
                    <h1 class="mb-0">Eliminar matrícula</h1>
                    <p class="text-muted">Por favor, confirma si deseas eliminar esta matrícula</p>
                </div>

                <div class="card-body">
                    <form asp-action="Delete">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="alert alert-warning text-center" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <h3>¿Estás seguro que quieres eliminar esta matrícula?</h3>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Alumno</label>
                            <input type="text" class="form-control" value="@Model.Alumno.Usuario.NombreUsuario" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Profesor</label>
                            <input type="text" class="form-control" value="@Model.Profesor.Usuario.NombreUsuario" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Año lectivo</label>
                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.YearLectivo)" readonly />
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-info">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}