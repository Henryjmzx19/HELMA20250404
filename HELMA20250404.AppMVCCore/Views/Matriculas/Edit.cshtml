@model HELMA20250404.AppMVCCore.Models.Matricula

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Matricula</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdMatricula" />
    <div class="row">
        <div class="form group col-4">
            <label asp-for="IdAlumno" class="control-label"></label>
            <select asp-for="IdAlumno" class="form-control" asp-items="ViewBag.IdAlumno"></select>
            <span asp-validation-for="IdAlumno" class="text-danger"></span>
        </div>
        <div class="form group col-4">
            <label asp-for="IdProfesor" class="control-label"></label>
            <select asp-for="IdProfesor" class="form-control" asp-items="ViewBag.IdProfesor"></select>
            <span asp-validation-for="IdProfesor" class="text-danger"></span>
        </div>
        <div class="form group col-4">
            <label asp-for="YearLectivo" class="control-label"></label>
            <input asp-for="YearLectivo" class="form-control" />
            <span asp-validation-for="YearLectivo" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group mt-4">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-info" >Cancelar</a>
        </div>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
